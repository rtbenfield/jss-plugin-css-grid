{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "pretty": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["src", "@types"],
  "exclude": ["node_modules"]
}
